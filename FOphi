    enabled         true;

    writeControl    timeStep;
    writeInterval   1;

    writeFields     false;
    log             true;

    region          surface;
    regionType      faceZone;
    name            CS1;

    fields          (phi.water advectiveSolutePhi);
    operation       sum;
}

