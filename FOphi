// Water flux across the inlet patch of the domain
phi_inlet
{
    type            surfaceFieldValue;
    libs            ("libfieldFunctionObjects.so");

    enabled         true;

    writeControl    timeStep;
    writeInterval   1;

    writeFields     false;
    log             true;

    region          surface;
    regionType      patch;
    name            inletWater;

    fields          (phi.water advectiveSolutePhi);
    operation       sum;
}

